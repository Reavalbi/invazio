{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"-I",
                "${env:SFML_PATH}\\include",
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}", "szorny.cc", "lovedek.cc",
				"/link",
                "sfml-graphics.lib",
                "sfml-window.lib",
                "sfml-system.lib",
                "/LIBPATH:${env:SFML_PATH}\\lib"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		}
	]
}